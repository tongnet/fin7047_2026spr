        "import numpy as np\n",
        "import pandas as pd\n",
        "import os\n",
        "\n",
        "# =========================\n",
        "# Step 1: Simulate data\n",
        "# =========================\n",
        "\n",
        "np.random.seed(42)  # For reproducibility\n",
        "\n",
        "data = pd.DataFrame({\n",
        "    \"Firm Size\": np.random.normal(500, 100, 100),           # Revenue\n",
        "    \"Leverage\": np.random.normal(1.5, 0.5, 100),            # Debt-to-equity ratio\n",
        "    \"Profitability\": np.random.normal(10, 2, 100),          # ROA\n",
        "    \"Market-to-Book\": np.random.normal(3, 0.8, 100),        # Valuation ratio\n",
        "    \"Cash Holding %\": np.random.normal(1, 0.2, 100),        # Cash holding percentage\n",
        "    \"Fixed Assets\": np.random.normal(200, 120, 100)         # Fixed assets\n",
        "})\n",
        "\n",
        "print(\"First 5 rows of simulated data:\")\n",
        "print(data.head())\n",
        "\n",
        "# =========================\n",
        "# Step 2: Mount Google Drive (Google Colab)\n",
        "# =========================\n",
        "\n",
        "from google.colab import drive\n",
        "drive.mount('/content/drive')\n",
        "\n",
        "# =========================\n",
        "# Step 3: Create folder if it doesn't exist\n",
        "# =========================\n",
        "\n",
        "folder_path = \"/content/drive/MyDrive/data\"\n",
        "\n",
        "if not os.path.exists(folder_path):\n",
        "    os.makedirs(folder_path)\n",
        "    print(\"Created folder:\", folder_path)\n",
        "else:\n",
        "    print(\"Folder already exists:\", folder_path)\n",
        "\n",
        "# =========================\n",
        "# Step 4: Save dataset as CSV\n",
        "# =========================\n",
        "\n",
        "file_path = folder_path + \"/simulated_firm_data.csv\"\n",
        "data.to_csv(file_path, index=False)\n",
        "\n",
        "print(\"Dataset saved to:\", file_path)"
      ]
